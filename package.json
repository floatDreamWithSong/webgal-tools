{
	"name": "webgal-tools",
	"version": "2.0.0",
	"description": "WebGAL 工具包",
	"type": "module",
	"private": true,
	"packageManager": "pnpm@8.15.6",
	"workspaces": [
		"apps/*",
		"packages/*"
	],
	"scripts": {
		"build": "turbo run build",
		"dev": "turbo run dev",
		"clean": "turbo run clean",
		"serve": "node apps/mcp-server/dist/main.js",
		"serve:sse": "node apps/mcp-server/dist/main.js --sse",
		"serve:sse:port": "node apps/mcp-server/dist/main.js --sse --port 3001",
		"test": "pnpm dlx @modelcontextprotocol/inspector node apps/mcp-server/dist/main.js -webgal D:/file/WebGal/release/public/games/新的游戏/game",
		"test:sse": "node apps/mcp-server/dist/main.js -webgal D:/file/WebGal/release/public/games/新的游戏/game --sse",
		"test:voice": "node apps/mcp-server/dist/main.js -webgal D:/file/WebGal/release/public/games/新的游戏/game -voice "
	},

	"dependencies": {},
	"devDependencies": {
		"@eslint/js": "^9.29.0",
		"@modelcontextprotocol/inspector": "^0.14.3",
		"@types/express": "^4.17.17",
		"@types/node": "^22.0.0",
		"@typescript-eslint/eslint-plugin": "^8.35.0",
		"@typescript-eslint/parser": "^8.35.0",
		"eslint": "^9.29.0",
		"pkg": "^5.8.1",
		"ts-node": "^10.9.2",
		"turbo": "^2.5.4",
		"typescript": "^5.6.0"
	}
}
