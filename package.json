{
	"name": "webgal-tools",
	"version": "1.0.1",
	"description": "WebGAL 工具包",
	"type": "module",
	"private": false,
	"packageManager": "pnpm@8.15.6",
	"workspaces": [
		"apps/*",
		"packages/*"
	],
	"scripts": {
		"build": "turbo run build",
		"dev": "turbo run dev",
		"clean": "turbo run clean",
		"mcp": "pnpm --filter=@webgal-tools/mcp-server run serve",
		"mcp:sse": "pnpm --filter=@webgal-tools/mcp-server run serve:sse",
		"mcp:sse:port": "pnpm --filter=@webgal-tools/mcp-server run serve:sse:port",
		"mcp:test": "pnpm --filter=@webgal-tools/mcp-server run test",
		"mcp:test:sse": "pnpm --filter=@webgal-tools/mcp-server run test:sse",
		"voice": "pnpm --filter=@webgal-tools/voice run serve",
		"voice:test": "pnpm --filter=@webgal-tools/voice run test",
		"publish:check": "node scripts/publish.js check",
		"publish:version": "node scripts/publish.js version",
		"publish:build": "node scripts/publish.js build",
		"publish:all": "node scripts/publish.js publish",
		"publish:beta": "node scripts/publish.js publish",
		"release": "pnpm run publish:build && pnpm run publish:all"
	},
	"devDependencies": {
		"@eslint/js": "^9.29.0",
		"@modelcontextprotocol/inspector": "^0.14.3",
		"@types/express": "^4.17.17",
		"@types/node": "^22.0.0",
		"@typescript-eslint/eslint-plugin": "^8.35.0",
		"@typescript-eslint/parser": "^8.35.0",
		"eslint": "^9.29.0",
		"pkg": "^5.8.1",
		"rimraf": "^6.0.1",
		"ts-node": "^10.9.2",
		"turbo": "^2.5.4",
		"typescript": "^5.6.0"
	}
}