{
	"name": "webgal-tools",
	"version": "1.0.0-beta.2",
	"description": "WebGAL 工具包",
	"type": "module",
	"private": false,
	"packageManager": "pnpm@9.15.2",
	"workspaces": [
		"apps/*",
		"packages/*"
	],
	"scripts": {
		"build": "turbo run build",
		"dev": "turbo run dev",
		"clean": "turbo run clean",
		"cli": "cross-env NODE_ENV=development node apps/cli/dist/index.js",
		"cli:mcp": "node apps/cli/dist/index.js --mcp",
		"voice-ui": "pnpm --filter voice-ui dev",
		"start:voice-ui": "node apps/voice-ui/bin/cli.js",
		"publish:check": "node scripts/publish.js check",
		"publish:version": "node scripts/publish.js version",
		"publish:build": "node scripts/publish.js build",
		"publish:all": "node scripts/publish.js publish",
		"publish:beta": "node scripts/publish.js publish",
		"release": "pnpm run publish:build && pnpm run publish:all",
		"bundle:cli": "node apps/cli/scripts/bundle.js"
	},
	"devDependencies": {
		"@eslint/js": "^9.29.0",
		"@modelcontextprotocol/inspector": "^0.14.3",
		"@types/express": "^4.17.17",
		"@types/node": "^22.0.0",
		"@typescript-eslint/eslint-plugin": "^8.35.0",
		"@typescript-eslint/parser": "^8.35.0",
		"cross-env": "^7.0.3",
		"eslint": "^9.29.0",
		"rimraf": "^6.0.1",
		"turbo": "^2.5.4",
		"typescript": "^5.6.0"
	},
	"dependencies": {
		"inquirer": "^12.7.0"
	}
}